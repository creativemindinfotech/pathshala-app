<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".classInterface.ClassNotesFragment">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView_ClassNotes"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <TextView
        android:id="@+id/class_notes_textView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="Class Notes"
        android:textSize="30dp"
        android:textStyle="bold"
        android:layout_gravity="center"
        android:gravity="center"/>
<!--    <androidx.recyclerview.widget.RecyclerView-->
<!--        android:id="@+id/class_notes_recyclerview"-->
<!--        android:layout_width="match_parent"-->
<!--        android:layout_height="match_parent" />-->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab_class_notes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:src="@drawable/attuchment"
        android:backgroundTint="@color/unitedNationBlue"
        android:tint="@color/white"
        android:focusable="true"
        android:layout_gravity="end|bottom"
        android:layout_margin="35dp"
        android:visibility="invisible"
        android:elevation="6dp"/>


</FrameLayout>