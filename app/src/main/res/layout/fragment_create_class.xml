<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/antiFlashWhite"
    android:orientation="vertical"
    tools:context=".homeFragments.CreateClassFragment">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar_homeFragment"
        android:layout_width="match_parent"
        android:layout_height="54dp"
        android:background="@color/unitedNationBlue"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:contentDescription="logo"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:paddingTop="10dp"
                android:paddingEnd="-15dp"
                android:paddingLeft="-15dp"
                app:srcCompat="@drawable/iconb" />

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/croissant_one"
                android:paddingTop="12dp"
                android:gravity="bottom"
                android:text="Pathshala"
                android:textColor="@color/whiteTextColor"
                android:textSize="30sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.1"
                app:layout_constraintStart_toEndOf="@+id/imageView3"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.appcompat.widget.Toolbar>
    <TextView
        android:id="@+id/class_registration_theme"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Class Registration Form"
        android:textColor="@color/black"
        android:gravity="center"
        android:textStyle="bold"
        android:textSize="25sp"
        android:layout_gravity="center"
        android:paddingBottom="15dp"
        android:layout_marginTop="0dp"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="@color/antiFlashWhite"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:layout_marginTop="5dp"
                android:text="Class Name"
                android:textColor="@color/liteBlack" />

            <EditText
                android:id="@+id/class_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="20dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="20dp"
                android:layout_marginBottom="30dp"
                android:background="@drawable/textbox"
                android:ems="10"
                android:hint="Enter the new class name"
                android:inputType="textPersonName"
                android:padding="10dp"
                android:textColor="@color/unitedNationBlue"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:layout_marginTop="5dp"
                android:text="Subject"
                android:textColor="@color/liteBlack" />

            <EditText
                android:id="@+id/class_subject"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="20dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="20dp"
                android:layout_marginBottom="30dp"
                android:background="@drawable/textbox"
                android:ems="10"
                android:hint="Enter the new class Subject"
                android:inputType="textPersonName"
                android:padding="10dp"
                android:textColor="@color/unitedNationBlue"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:layout_marginTop="5dp"
                android:text="Institute Name"
                android:textColor="@color/liteBlack" />

            <EditText
                android:id="@+id/institute_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="20dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="20dp"
                android:layout_marginBottom="30dp"
                android:background="@drawable/textbox"
                android:ems="10"
                android:hint="Enter the name of your institute"
                android:inputType="textPersonName"
                android:padding="10dp"
                android:singleLine="false"
                android:textColor="@color/unitedNationBlue"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:layout_marginTop="5dp"
                android:text="Batch"
                android:textColor="@color/liteBlack" />

            <EditText
                android:id="@+id/batch_year"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="20dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="20dp"
                android:layout_marginBottom="30dp"
                android:background="@drawable/textbox"
                android:ems="10"
                android:hint="Batch or Section"
                android:inputType="text"
                android:padding="10dp"
                android:textColor="@color/unitedNationBlue"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:layout_marginTop="5dp"
                android:text="Class Description"
                android:textColor="@color/liteBlack" />

            <EditText
                android:id="@+id/description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="20dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="20dp"
                android:layout_marginBottom="30dp"
                android:background="@drawable/textbox"
                android:ems="10"
                android:hint="Write someting about your calass"
                android:inputType="textPersonName"
                android:padding="10dp"
                android:singleLine="false"
                android:textColor="@color/unitedNationBlue"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:layout_marginTop="5dp"
                android:text="Fees(if you are doing it for free , keep it empty)"
                android:textColor="@color/liteBlack" />

            <EditText
                android:id="@+id/fees"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="20dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="20dp"
                android:layout_marginBottom="30dp"
                android:background="@drawable/textbox"
                android:ems="10"
                android:hint="Class Fees"
                android:inputType="number"
                android:padding="10dp"
                android:textColor="@color/unitedNationBlue"
                android:textStyle="bold" />

            <Button
                android:id="@+id/choose_class_theme_colour_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="20dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="20dp"
                android:layout_marginBottom="50dp"
                android:background="@drawable/btn"
                android:text="Choose Class Theme Colour" />

            <Button
                android:id="@+id/create_class_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="20dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="20dp"
                android:layout_marginBottom="70dp"
                android:background="@drawable/btn"
                android:text="Create Class" />


        </LinearLayout>
    </ScrollView>
</LinearLayout>